<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="AppPaolo.Views.LoginPage">
    <ContentPage.Content>
        <StackLayout
            Padding="20"
            HorizontalOptions="CenterAndExpand"
            VerticalOptions="CenterAndExpand"
            Spacing="30">
            <Entry
                Text="{Binding DatosLogin.Email, Mode=TwoWay}"
                Placeholder="ingresa tu email "
                FontSize="30" />

            <Entry
                Text="{Binding DatosLogin.Password, Mode=TwoWay}"
                Placeholder="ingresa tu paswword"
                FontSize="30" />

            <Button
                Text="INGRESAR"
                FontSize="30"
                Command="{Binding ValidarCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>